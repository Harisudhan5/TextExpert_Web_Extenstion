{
    "manifest_version": 3,
    "name": "Text Interaction Extension",
    "version": "1.0",
    "description": "Provides options for selected text when toggled on.",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "popup.html"

    },

    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  